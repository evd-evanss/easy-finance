<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_primary</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.EasyFinance">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Text_Easy">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_Easy.Title">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Text_Easy.SubTitle">
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="Text_Easy.Body">
        <item name="android:textSize">@dimen/text_body</item>
    </style>

    <style name="Button_Easy" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/color_state</item>
    </style>

    <style name="Button_Easy.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Button_Easy.Dialog">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="backgroundTint">@color/color_on_primary</item>
        <item name="strokeColor">@color/color_on_primary</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="android:textAppearance">@style/Text_Easy.Body</item>
    </style>

    <style name="Button_Easy.Dialog.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="strokeColor">@color/color_on_primary</item>
        <item name="strokeWidth">@dimen/stroke_size</item>
        <item name="android:textAppearance">@style/Text_Easy.Body</item>
    </style>

    <!--INPUT TEXT!-->
    <style name="InputTextLayout_Easy" parent="Theme.EasyFinance">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundColor">@color/color_primary</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="InputTextLayout_Easy.EndIcon" parent="Theme.EasyFinance">
        <item name="endIconMode">clear_text</item>
    </style>

    <!--TOOLBAR!-->
    <style name="ToolbarDefault" parent="Widget.AppCompat.Toolbar">
        <item name="android:textAppearance">@style/Text_Easy.Body</item>
    </style>
</resources>