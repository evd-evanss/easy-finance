<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/horizontalMargin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemDefaultIconIv"
        android:layout_width="@dimen/placeholderDefaultIconSize"
        android:layout_height="@dimen/placeholderDefaultIconSize"
        android:scaleType="fitCenter"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemDefaultTitleTv"
        style="@style/Text_Easy.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/horizontalMargin"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/itemDefaultLabelTv"
        style="@style/Text_Easy.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/horizontalMargin"
        tools:lines="2"
        tools:text="@tools:sample/lorem/random" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/itemDefaultBtn"
        style="@style/Button_Easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/placeholder_error_button_label" />

</LinearLayout>